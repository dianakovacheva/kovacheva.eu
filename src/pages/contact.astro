---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact" sideBarActiveItemID="contact">
  <div>
    <div class="text-3xl w-full font-bold mb-5 text-center">Contact</div>
  </div>

  <form
    class="w-full max-w-lg pt-6"
    action="https://formspree.io/f/mvoeaook"
    method="POST"
  >
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="block tracking-wide text-gray-700 mb-2" for="firstName">
          First Name
        </label>
        <input
          class="appearance-none block w-full bg-base-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
          name="firstName"
          id="firstName"
          type="text"
          required
        />
      </div>
      <div class="w-full md:w-1/2 px-3">
        <label class="block tracking-wide text-gray-700 mb-2" for="lastName">
          Last Name
        </label>
        <input
          class="appearance-none block w-full bg-base-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
          name="lastName"
          id="lastName"
          type="text"
          required
        />
      </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <label class="block tracking-wide text-gray-700 mb-2" for="company">
          Company Name
        </label>
        <input
          class="appearance-none block w-full bg-base-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
          name="company"
          id="company"
          type="text"
        />
      </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <label class="block tracking-wide text-gray-700 mb-2" for="email">
          E-mail
        </label>
        <input
          class="appearance-none block w-full bg-base-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
          name="email"
          id="email"
          type="email"
          required
        />
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <label class="block tracking-wide text-gray-700 mb-2" for="message">
          Message
        </label>
        <textarea
          class="no-resize appearance-none block w-full bg-base-200 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 h-28 resize-none"
          name="message"
          id="message"
          required></textarea>
      </div>
    </div>
    <div class="md:flex md:items-center">
      <div class="md:w-full flex justify-center">
        <button type="submit" class="btn"> Send Message</button>
      </div>
    </div>
  </form>
</BaseLayout>
